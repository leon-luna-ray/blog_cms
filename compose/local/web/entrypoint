#!/bin/bash

set -o errexit
set -o pipefail
set -o nounset

postgres_ready() {
python << END
import sys

import psycopg2

try:
    psycopg2.connect(
        dbname="wagtail_blog",
        user="wagtail_blog",
        password="wagtail_blog",
        host="db",
        port=5432,
    )
except psycopg2.OperationalError:
    sys.exit(-1)
sys.exit(0)
END
}
until postgres_ready; do
    >&2 echo 'Waiting for PostgreSQL to become available...' 
    sleep 1
done
>&2 echo 'ğŸ’¿ PostgreSQL is available'

exec "$@"